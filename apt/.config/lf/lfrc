set ignorecase true
set mouse true
set previewer ~/.config/lf/pv.sh

cmd open $vim $fx

map <enter> open
map <esc> quit

map <c-w> $$SHELL
map <c-q> quit
map <c-b> clear
map <c-u> :unselect;clear
map <c-c> copy
map <c-f> search
map <c-n> search-next

map <f-2> rename
map <f-5> reload

map <c-k> ${{
#Copy fullpath
echo -n "$fx" | clip.exe
}}

map . set hidden!

map a :find; cmd-insert a;
map b :find; cmd-insert b;
map c :find; cmd-insert c;
